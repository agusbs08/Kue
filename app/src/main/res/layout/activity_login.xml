    <EditText
        android:id="@+id/et_username_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_man_user"
        android:drawableTint="@color/abu"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:ems="15"
        android:hint="@string/Username"
        android:fontFamily="@font/mukta_vaani_light"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/abuLight"/>

    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_locked_padlock"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:drawableTint="@color/abu"
        android:ems="15"
        android:hint="@string/password"
        android:fontFamily="@font/mukta_vaani_light"
        android:elevation="10dp"
        android:inputType="textPersonName"
        android:backgroundTint="@color/abuLight"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_username_login" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        android:ems="15"
        android:text="Masuk"
        android:fontFamily="@font/mukta_vaani_semibold"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password_login"
        app:layout_constraintVertical_bias="0.0" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/default_google_sign_in_button"
        android:layout_width="270dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:textAllCaps="false"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_login" />

    <TextView
        android:id="@+id/tv_daftar_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="172dp"
        android:layout_marginLeft="172dp"
        android:layout_marginStart="172dp"
        android:fontFamily="@font/mukta_vaani_semibold"
        android:text="Daftar"
        app:fontFamily="@font/mukta_vaani_extralight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>