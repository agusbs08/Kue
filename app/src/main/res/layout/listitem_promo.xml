<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="350dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_produk_lisitem_promo"
            android:layout_width="160dp"
            android:layout_height="196dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_diskon_listitem_promo"
            android:layout_width="86dp"
            android:layout_height="34dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_textview"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_namaproduk_listitem_promo"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_produk_lisitem_promo" />

        <TextView
            android:id="@+id/tv_hargaasli_listitem_promo"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_namaproduk_listitem_promo" />

        <TextView
            android:id="@+id/tv_hargadiskon_listitem_promo"
            android:layout_width="86dp"
            android:layout_height="31dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hargaasli_listitem_promo" />
        />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>