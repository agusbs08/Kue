<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pilihtoko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_fototoko_pilihtoko"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="27dp"
                android:background="@mipmap/ic_launcher"
                android:contentDescription="@string/todo1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/tv_namatoko_pilihtoko"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="30dp"
                android:text="@string/nama_toko"
                android:textColor="#000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/iv_fototoko_pilihtoko"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:text="@string/alamat"
                android:textColor="#7D7D7D"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/iv_fototoko_pilihtoko"
                app:layout_constraintTop_toBottomOf="@+id/tv_namatoko_pilihtoko"
                android:layout_marginLeft="12dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>