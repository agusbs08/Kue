<?xml version="1.0" encoding="utf-8"?>
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            style="@style/CardView.Light"
            android:layout_width="128dp"
            android:layout_height="165dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_cardview">

            <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="128dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_produk_list_beranda"
                    android:layout_width="96dp"
                    android:layout_height="103dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginStart="60dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@mipmap/ic_launcher" />

                <View
                    android:id="@+id/vw_garis_list_beranda"
                    android:layout_width="168dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="52dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="104dp"
                    android:background="@color/biru"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_produk_list_beranda"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_namaproduk_list_beranda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Nama Item"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vw_garis_list_beranda"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/tv_hargaproduk_list_beranda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Harga"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_namaproduk_list_beranda"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
